<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/ll_display"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="History:"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:textColor="#FFF"/>

    </LinearLayout>


    <TableLayout
        android:id="@+id/tl_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_display"
        android:layout_alignParentBottom="true">

        <TableRow>

            <Button
                android:id="@+id/btn_clear"
                style="@style/Size"
                android:text="C" />

            <Button
                android:id="@+id/btn_del"
                style="@style/Size"
                android:text="Del" />

            <Button
                android:id="@+id/btn_mod"
                style="@style/Size"
                android:text="%" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/Size"
                android:text="รท" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_7"
                style="@style/Size"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/Size"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/Size"
                android:text="9" />

            <Button
                android:id="@+id/btn_multiply"
                style="@style/Size"
                android:text="ร" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_4"
                style="@style/Size"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/Size"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/Size"
                android:text="6" />

            <Button
                android:id="@+id/btn_mius"
                style="@style/Size"
                android:text="-" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_1"
                style="@style/Size"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/Size"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/Size"
                android:text="3" />

            <Button
                android:id="@+id/btn_plus"
                style="@style/Size"
                android:text="+" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btn_0"
                style="@style/Size"
                android:layout_span="2"
                android:text="0" />


            <Button
                android:id="@+id/btn_point"
                style="@style/Size"
                android:text="." />

            <Button
                android:id="@+id/btn_equit"
                style="@style/Size"
                android:text="=" />
        </TableRow>


    </TableLayout>

</RelativeLayout>